generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Agar MongoDB use kar rahe hain to "mongodb" likhein
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VENDOR
  BUYER
  SERVICE_SEEKER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(BUYER)
  image         String?
  products      Product[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  image       String?
  category    String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}